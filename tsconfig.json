{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "App/*": ["./app/*"],
      "Assets/*": ["./assets/*"],
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src", "index.d.ts"]
}
